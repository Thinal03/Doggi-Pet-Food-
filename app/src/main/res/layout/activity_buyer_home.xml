<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/welcomeTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome, Sir/Madam !"
        android:textSize="24sp"
        android:textColor="#000000"
        android:layout_marginBottom="24dp"
        android:gravity="center" />

    <Button
        android:id="@+id/productsButton"
        android:layout_width="378dp"
        android:layout_height="202dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/button_background"
        android:drawableLeft="@drawable/ic_products"
        android:drawablePadding="8dp"
        android:padding="12dp"
        android:text="Products"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/educationalContentButton"
        android:layout_width="376dp"
        android:layout_height="188dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/button_background"
        android:drawableLeft="@drawable/ic_education"
        android:drawablePadding="8dp"
        android:padding="12dp"
        android:text="Educational Content"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/personalInformationButton"
        android:layout_width="374dp"
        android:layout_height="206dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/button_background"
        android:drawableLeft="@drawable/ic_personal_info"
        android:drawablePadding="8dp"
        android:padding="12dp"
        android:text="Personal Information"
        android:textColor="#FFFFFF" />

</LinearLayout>
